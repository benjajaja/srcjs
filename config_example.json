{
	"port": 80,
	"process": {
			"chdir": "../minecraft",
			"command": "java",
			"arguments": [
					"-Xmx3072M",
					"-Xms1536M",
					"-jar",
					"craftbukkit-0.0.1-SNAPSHOT.jar"
			],
			"setsid": true,
			"ioInterval": 0,
			"stop": [
					{"input": "say SERVER RESTART FROM CONSOLE, saving..."},
					{"input": "save-all"},
					{"input": "say ...done, sending stop...", "timeout": 2000},
					{"input": "stop"},
					{"input": "say ...sending kill signal... bye bye!", "timeout": 2000},
					{"signal": 9, "timeout": 20000}
			]
	},
	"pidFilename": "proc.pid",
	"plugins": ["mc_jsonapi"],
	"plugin": {
		"srcrcon": {
			"password": "yourRconPassword"
		},
		"mc_jsonapi": {
			"host": "localhost",
			"port": 20060,
			"username": "setUsername",
			"password": "setPassword",
			"salt": "your salt"
		},
		"sample": {
			"sampleProperty": "¡caracoles con sopa de río!"
		}
	}
}
